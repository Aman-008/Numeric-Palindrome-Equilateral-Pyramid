#include <iostream>
using namespace std;

int main()
{
    int n;
    cin >> n;
    for (int row = 0; row < n; row++)
    {
        int col = 0;
        for (col = 0; col < row + 1; col++)
        {
            cout << col + 1;
        }
        col = col - 1;
        for (int col = row; col >= 1; col = col - 1)
        {
            cout << col;
        }

        cout << endl;
    }

    return 0;
}
